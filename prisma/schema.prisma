generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  phase       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  uploads     Upload[]
  elements    Element[]
}

model Upload {
  id           String    @id @default(cuid())
  filename     String
  status       String    // "Processing" | "Completed" | "Failed"
  error        String?
  elementCount Int       @default(0)
  projectId    String
  project      Project   @relation(fields: [projectId], references: [id])
  elements     Element[]
  createdAt    DateTime  @default(now())
}

model Element {
  id            String     @id @default(cuid())
  name          String
  type          String?
  volume        Float
  buildingStorey String?
  project       Project    @relation(fields: [projectId], references: [id])
  projectId     String
  upload        Upload     @relation(fields: [uploadId], references: [id])
  uploadId      String
  materials     Material[] // Relation to materials
}

model Material {
  id       String    @id @default(cuid())
  name     String
  category String?
  density  Float?
  gwp      Float?
  penr     Float?
  ubp      Float?
  elements Element[] // Many-to-many relation with elements
} 