<nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand" href="/">
      <img
        src="/images/logo.png"
        width="30"
        height="30"
        class="d-inline-block align-top"
        alt="IfcLCA Logo"
      />
      IfcLCA
    </a>
    <!-- Toggler Button -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- Collapsible Content -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <!-- Left-aligned Navbar Items -->
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <% if (session && session.userId) { %>
        <li class="nav-item">
          <a class="nav-link" href="/dashboard">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/logout">Logout</a>
        </li>
        <% } else { %>
        <li class="nav-item">
          <a class="nav-link" href="/auth/login">Login</a>
        </li>
        <% } %>
      </ul>
      <!-- Right-aligned Navbar Items -->
      <ul class="navbar-nav ms-auto mb-2 mb-md-0">
        <% if (typeof page !== 'undefined' && page === 'projectHome' && project)
        { %>
        <li class="nav-item me-2">
          <div class="dropdown">
            <button
              class="btn btn-success dropdown-toggle"
              type="button"
              id="exportDropdown"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <strong>Export</strong>
            </button>
            <ul class="dropdown-menu" aria-labelledby="exportDropdown">
              <li>
                <a
                  class="dropdown-item"
                  href="/api/projects/<%= project._id %>/export"
                  data-bs-toggle="tooltip"
                  title="Download table as Excel file"
                  >Excel</a
                >
              </li>
              <li>
                <a
                  class="dropdown-item"
                  href="/api/projects/<%= project._id %>/export-ifc"
                  data-bs-toggle="tooltip"
                  title="Export project as IFC file"
                  >IFC</a
                >
              </li>
            </ul>
          </div>
        </li>
        <li class="nav-item">
          <button
            type="button"
            class="btn btn-primary"
            onclick="document.getElementById('hiddenFileInput').click();"
            data-bs-toggle="tooltip"
            title="Upload an IFC file, this will overwrite current project elements..."
          >
            <strong>Upload IFC</strong>
          </button>
          <form
            id="ifcUploadForm"
            action="/api/projects/<%= project._id %>/upload"
            method="POST"
            enctype="multipart/form-data"
            style="display: none"
          >
            <input
              type="file"
              id="hiddenFileInput"
              name="ifcFile"
              onchange="this.form.submit();"
              required
            />
            <% if (typeof uploadSuccess !== 'undefined' && uploadSuccess) { %>
            <div class="alert alert-success mt-2" role="alert">
              IFC file uploaded successfully!
            </div>
            <% } %>
          </form>
        </li>
        <% } else if (typeof page !== 'undefined' && page === 'dashboard') { %>
        <li class="nav-item">
          <a
            href="/newProject"
            class="btn btn-primary"
            data-bs-toggle="tooltip"
            title="Start a new project by entering project details"
          >
            <strong>Start New Project</strong>
          </a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Initialize Bootstrap components -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    var dropdowns = document.querySelectorAll(".dropdown-toggle");
    dropdowns.forEach(function (dropdown) {
      new bootstrap.Dropdown(dropdown);
    });

    var tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
    tooltips.forEach(function (tooltip) {
      new bootstrap.Tooltip(tooltip);
    });
  });
</script>
