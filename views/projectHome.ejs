<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
<%- include('partials/_header.ejs') %>
<main role="main" class="container mt-4">
    <div class="project-details">
        <h2><%= formatProjectNameForDisplay(project.name) %></h2>
        <p><strong>Phase:</strong> <%= project.phase %></p>
        <p><strong>Description:</strong> <%= project.description %></p>
        <p><strong>Total Carbon Footprint:</strong> <span id="carbonFootprint"><%= project.totalCarbonFootprint %></span></p>
        <img src="<%= project.customImage %>" alt="Project Image" style="width: 250px; height: auto;">
    </div>
    <div class="text-center mt-4">
        <h3>Upload IFC File</h3>
        <form id="ifcUploadForm" action="/api/projects/<%= project._id %>/upload" method="POST" enctype="multipart/form-data">
            <input class="form-control" type="file" id="ifcFile" name="ifcFile" onchange="this.form.submit();" required>
        </form>
        <div id="uploadMessage"></div>
    </div>
    <% if (typeof uploadSuccess !== 'undefined' && uploadSuccess) { %>
        <div class="alert alert-success" role="alert">
            IFC file uploaded successfully!
        </div>
    <% } %>
    <a href="/projects/<%= project._id %>/edit" class="btn btn-primary" style="margin-top: 20px;">Edit Project</a>
</main>
<%- include('partials/_footer.ejs') %>
<script src="/js/uploadIfc.js"></script>
</body>
</html>