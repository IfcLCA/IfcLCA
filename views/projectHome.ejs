<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/tabulator-tables/dist/css/tabulator.min.css" rel="stylesheet">
<body>
<%- include('partials/_header.ejs') %>
<main role="main" class="container mt-4">
    <div class="project-details">
        <h2><%= formatProjectNameForDisplay(project.name) %></h2>
        <p><strong>Phase:</strong> <%= project.phase %></p>
        <p><strong>Description:</strong> <%= project.description %></p>
        <p><strong>Total Carbon Footprint:</strong> <span id="carbonFootprint"><%= project.totalCarbonFootprint %></span></p>
        <img src="<%= project.customImage %>" alt="Project Image" style="width: 250px; height: auto;">
    </div>
    <div class="text-center mt-4">
        <h3>Upload IFC File</h3>
        <form id="ifcUploadForm" action="/api/projects/<%= project._id %>/upload" method="POST" enctype="multipart/form-data">
            <input class="form-control" type="file" id="ifcFile" name="ifcFile" onchange="this.form.submit();" required>
        </form>
        <div id="uploadMessage"></div>
    </div>
    <% if (typeof uploadSuccess !== 'undefined' && uploadSuccess) { %>
        <div class="alert alert-success" role="alert">
            IFC file uploaded successfully!
        </div>
    <% } %>
    <!-- Tabulator Table for Building Elements -->
    <div id="elements-table" class="mt-4"></div>
    <!-- Placeholder for Building Elements Table -->
    <div id="building-elements-table" class="mt-4">
        <h3>Building Elements</h3>
        <table id="building-elements">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Material</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                <!-- Building elements will be populated here -->
            </tbody>
        </table>
    </div>
    <a href="/projects/<%= project._id %>/edit" class="btn btn-primary" style="margin-top: 20px;">Edit Project</a>
</main>
<%- include('partials/_footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/tabulator-tables/dist/js/tabulator.min.js"></script>
<script src="/js/uploadIfc.js"></script>
<script>
    var projectId = "<%= project._id %>";
    var projectName = "<%= project.name %>";
    console.log(`projectName: ${projectName}`);
</script>
<script src="/js/projectTable.js"></script>
<script>
  // Debugging code to log project data on page load
  document.addEventListener('DOMContentLoaded', function() {
    console.log("Project data on page load:", {
      projectId: "<%= project._id %>",
      projectName: "<%= project.name %>",
      totalCarbonFootprint: "<%= project.totalCarbonFootprint %>"
    });
    if (!projectId || !projectName) {
      console.error("Project ID or name is undefined. Check the server response and EJS variable interpolation.");
    }

    // Fetch and display building elements for the latest upload
    function populateBuildingElementsTable() {
      fetch(`/api/projects/${projectId}/building-elements`)
        .then(response => {
          if (!response.ok) {
            throw new Error('Network response was not ok');
          }
          return response.json();
        })
        .then(elements => {
          const tableBody = document.getElementById('building-elements').querySelector('tbody');
          // Clear existing rows
          tableBody.innerHTML = '';
          // Populate table with new rows
          elements.forEach(element => {
            const row = tableBody.insertRow();
            row.innerHTML = `
              <td>${element.name}</td>
              <td>${element.type}</td>
              <td>${element.material}</td>
              <td>${element.quantity}</td>
            `;
          });
        })
        .catch(error => {
          console.error('Error fetching building elements:', error);
          // Optionally update the UI to indicate that an error occurred
        });
    }

    // Call the function to populate the table
    populateBuildingElementsTable();
  });
</script>
</body>
</html>
