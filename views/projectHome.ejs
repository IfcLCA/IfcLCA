<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
<%- include('partials/_header.ejs') %>
<main role="main" class="container mt-4">
    <div class="project-details">
        <h2><%= project.name %></h2>
        <p><strong>Phase:</strong> <%= project.phase %></p>
        <p><strong>Description:</strong> <%= project.description %></p>
        <p><strong>Total Carbon Footprint:</strong> <span id="carbonFootprint"><%= project.totalCarbonFootprint %></span></p>
        <img src="<%= project.customImage %>" alt="Project Image" style="width: 250px; height: auto;">
    </div>
    <div class="upload-ifc mt-4">
        <h3>Upload IFC File</h3>
        <form id="ifcUploadForm" action="/api/projects/<%= project._id %>/upload" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="ifcFile" class="form-label">Select IFC file:</label>
                <input class="form-control" type="file" id="ifcFile" name="ifcFile" required>
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
        <div id="uploadMessage"></div>
    </div>
    <div class="edit-project mt-4">
        <a href="/projects/<%= project._id %>/edit" class="btn btn-secondary">Edit Project</a>
    </div>
</main>
<%- include('partials/_footer.ejs') %>
<script src="/js/uploadIfc.js"></script>
</body>
</html>